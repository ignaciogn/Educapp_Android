<!-- res/drawable/fondo_register.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo con color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#e6dca6" />
        </shape>
    </item>

    <!-- Borde -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#e6dca6" />
            <stroke
                android:width="3dp"
                android:color="#000000" />
        </shape>
    </item>
</layer-list>
